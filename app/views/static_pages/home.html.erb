<% provide(:title, t(".title")) %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".h3"%></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t".h1"%></h1>
    <h2>
      <%= t".cnten1"%>
      <a href="http://www.railstutorial.org/"><%= t".cnten2"%></a>
      <%=t".cnten3"%>
    </h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: t(".rails_logo")), "http://rubyonrails.org/" %>
<%end%>
