<% provide(:title,  t("sessions.new.login")) %>
<h1><%= t("sessions.new.login") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("sessions.new.remember") %></span>
      <% end %>
      <%= f.submit t("sessions.new.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("sessions.new.newuser") %> <%= link_to t("sessions.new.singupnow"), signup_path %></p>
  </div>
</div>
